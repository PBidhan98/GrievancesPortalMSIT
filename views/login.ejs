<%- include('partials/header') %>
<style media="screen">
  label{
    font-family: "Arial";
    text-transform: uppercase;
    font-weight: 200;
    margin:0.5em 0em;
  }

</style>
<div class="container jumbotron sm-12" style="width: 35%;">
  <div class="jumbotron" style="background-color: #fff;border-radius: 20px;" >
    <div class="container">
      <p class="display-3" style="text-transform: capitalize;color: #FF5722;font-size:30px;text-align:center;"><%=mem%> Account Login</p>
      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">

              <!-- Makes POST request to /register route -->

                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" name="password" required oninvalid="this.setCustomValidity('Enter your password')" onchange="this.setCustomValidity('')">
                  <h5 id="alertm" style="color:red; padding:3%;"></h5>
                </div>
                <a href="/forget/<%=mem%>" style="float: right; padding-top: 15px;">Forgot Password!</a>
                <button id="submit" type="submit" class="btn btn-lg" style="width: 30%;border-radius:20px;color: #ffff;background-color: #1fab89;">Login</button>

              <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>

              <script type="text/javascript">
                $(document).ready(function() {
                    $('#submit').click(function(){
                      var email = $("#email").val();
                      var password = $("#password").val();
                      if(email&&password){
                        $.post("/login/<%=mem%>",
                          {
                            email: email,
                            password: password,
                          },function(res, status){
                            if(res.status=="fail"){
                              $("#alertm").html(res.msg);
                            }
                            if(res.status=="success"){
                              window.location.href = "/submitted/"+res.pid+"/<%=mem%>";
                            }
                          }
                        );
                      }else{
                        $("#alertm").html("Enter the empty fields");
                      }
                    });
                  }
                );

              </script>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
