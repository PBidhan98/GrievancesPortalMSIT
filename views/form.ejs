<%- include('partials/header') %>

<style media="screen">
  label{
    font-family: "Arial";
    text-transform: uppercase;
    font-weight: 200;
    margin:1em 0em;
  }

</style>
  <div class="container jumbotron sm-12" style="background-color: #fff;border-radius: 20px;width: 50%">

    <p class="display-3" style="text-transform:capitalize;color: #FF5722;padding-bottom:0.5em;font-size:25px;text-align:center;">Please enter the following:</p>

    <div class="row" style="padding-left: 10%;">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /register route -->
            <form action="/formsubmit/<%= pid %>/<%= mem %>" method="POST" enctype="multipart/form-data">
                <label for="subject">Subject of Grievance:</label>
              <div class="form-group">
                <input id="subject" type="text" name="subject" style="width:85%;" required oninvalid="this.setCustomValidity('Enter the subject of grievance')" onchange="this.setCustomValidity('')"/>
              </div>
              <div class="form-group">

                  <label for="image">Image:   </label>
                  <input id="image" type="file" name="pic" accept="image/*"/>

                  <label for="resume">Resume:   </label>
                  <input id="resume" type="file" name="resume">


              </div>

              <div class="form-group">
               <label for="details">Grievance Details:   </label>
               <textarea name="details" id="details" rows="8" style="width:85%;" required oninvalid="this.setCustomValidity('Please specify the detail!')" onchange="this.setCustomValidity('')"></textarea>
              </div>
              <div style="padding-left: 30%;">
                <button type="submit" class="btn btn-lg" style="width: 30%;border-radius:20px;color: #ffff;background-color: #1fab89;margin-top:10px;">Submit</button>
              </div>


            </form>

          </div>
        </div>
      </div>
      </div>

  </div>


<%- include('partials/footer') %>
