<%- include('partials/header') %>

<style media="screen">
  label{
    font-family: "Arial";
    text-transform: uppercase;
    font-weight: 200;
    margin:0.5em 0em;
  }

</style>

<div class="container jumbotron sm-12" style="width: 35%;">
  <div class="jumbotron" style="background-color: #fff;border-radius:20px;" >
    <div class="container">
      <p class="display-3" style="text-transform: capitalize;color: #FF5722;font-size:30px;text-align:center;">Forget Password</p>
      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" name="email" id="email" required>
                </div>
                <div class="form-group">
                  <label for="dob">DOB: </label>
                  <input class="form-control" type="date" name="dob" id="dob" required oninvalid="this.setCustomValidity('Enter DOB')" onchange="this.setCustomValidity('')">
                </div>
                <div class="form-group">
                  <label for="password">Enter New Password: </label>
                  <input type="password" class="form-control" name="npwd" id="npwd" required oninvalid="this.setCustomValidity('Enter New Password')" onchange="this.setCustomValidity('')">
                  <h5 id="alertm" style="color:red; padding:1%;"></h5>
                </div>
                <div style="text-align:center;">
                  <button id="submit" type="submit" class="btn btn-lg" style="width: 40%;border-radius:20px;color: #ffff;background-color: #1fab89;">Submit</button>
                </div>
            <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
            <script type="text/javascript">
              $(document).ready(function() {
                  $('#submit').click(function(){
                    var email = $("#email").val();
                    var dob = $("#dob").val();
                    var npwd = $("#npwd").val();
                    if(email&&dob&&npwd){
                      $.post("/forget/<%=mem%>",
                        {
                          email: email,
                          npwd: npwd,
                          dob: dob
                        },function(res, status){
                          if(res.status=="fail"){
                            $("#alertm").html(res.msg);
                          }
                          if(res.status=="success"){
                            window.location.href = "/login/<%=mem%>";
                          }
                        }
                      );
                    }else{
                      $("#alertm").html("Enter the empty fields");
                    }
                  });
                }
              );

            </script>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
